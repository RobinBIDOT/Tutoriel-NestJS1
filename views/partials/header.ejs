<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/global.css">
    <link rel="stylesheet" href="/glassmorphism.css">
    <% if (locals.style){%>
        <link rel="stylesheet" href="/<%= style %>.css">
    <% } %>
    <title><%= title %></title>
</head>
<body>
<header class="w-100">
    <nav class="navigation container-fluid mt-4">
        <div class="row align-items-center w-100">
            <div class="col-md-6">
                <h1>Villes à visiter</h1>
            </div>
            <div class="col-md-6 text-end">
                <ul class="nav">
                    <% if (!locals.connected){%>
                        <li class="nav-item"><a href="/user/signup" class="btn btn-signup me-2">Inscription</a></li>
                        <li class="nav-item"><a href="/user/login" class="btn btn-login">Connexion</a></li>
                    <% } %>
                    <% if (locals.connected){%>
                        <li class="nav-item"><a href="/post/add" class="btn btn-light me-2">Ajouter</a></li>
                        <li class="nav-item">
                            <form action="/user/logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-light">Déconnexion</button>
                            </form>
                        </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
</header>